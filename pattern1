#include <stdio.h>

int main()
{
    int i ,j,k,n;
    
    printf("enter the alue of n");
    scanf("%d",&n);
    if(n%2==0){
        printf("please enter the odd value");
    }
    else{
    int m=n;
    int p=3;
    for(i=1;i<=n/2;i++)
    {
        for(j=i;j<=n/2;j++)
        {
            printf(" ");
        }
        for(k=1;k<=i;k++)
        {
            printf("*");
        }
        printf("\n");
    }
    for(i=1;i<=n/2+1;i++)
    {
        printf("*");
    }
    for(i=1;i<=n;i++)
    {
        printf("@");
    }
    printf("\n");
    for(i=1;i<=n/2;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf(" ");
        } 
        for(k=n/2;k>=i;k--)
        {
            printf("*");
        }
        for(j=1;j<n;j++)
        {
            printf(" ");
        }
        printf("@");
        printf("\n");
        
    }
    for(i=1;i<=n/2;i++)
    {
    for(j=1;j<n+3;j++)
    {
      printf(" ");
    }
     printf("@");
     printf("\n");
    
    
    }
     for(i=1;i<=n/2+1;i++)
    {
    for(j=1;j<n+3;j++)
    {
         printf(" ");
    }
    for(j=1;j<i;j++)
    {
        printf(" ");
    }
    for(k=m;k>=1;k--)
    {
        printf("*");
    }
    m=m-2;
    printf("\n");
    
    }
     for(i=1;i<=n/2;i++)
    {
    for(j=1;j<n+3;j++)
    {
      printf(" ");
    }
    for(j=i;j<n/2;j++)
    {
        printf(" ");
    }
    for(j=1;j<=p;j++)
    {
        printf("*");
    }
    p=p+2;
    printf("\n");
    }
    for(i=1;i<n;i++)
    {
        for(j=1;j<2*n+n/2;j++)
        {
            printf(" ");
        }
        printf("@");
        for(j=1;j<=n-1;j++)
        {
            printf(" ");
        }
        if(i>n/2)
        {
            for(j=1;j<=n/2;j++)
            {
                if(j+n/2==i||j+n/2<i)
                printf("*");
            }
        }
        
        printf("\n");
    };
     for(i=1;i<=1;i++)
    {
        for(j=1;j<2*n+n/2;j++)
        {
            printf(" ");
        }
        for(j=1;j<=n;j++)
        {
            printf("@");
        }
              for(i=1;i<=n/2+1;i++)
    {
        printf("*");
    }
         printf("\n");
   
    }
    for(i=1;i<=n/2;i++)
    {
        for(j=1;j<3*n+n/2;j++)
        {
            printf(" ");
        }
        for(k=n/2;k>=i;k--)
        {
            printf("*");
        }
        printf("\n");
    }
    }
}
